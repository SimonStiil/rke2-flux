{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "flux": {
    "fileMatch": ["\\.yaml$"]
  },
  "lockFileMaintenance": {
    "enabled": false
  },
  "regexManagers": [
    {
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "- https://raw.githubusercontent.com/(?<depName>[\\w\\-\\_]+/[\\w\\-\\_]+?)/(?<currentValue>[\\w\\-\\_\\,\\.]+?)/"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "groupName": "Fluxcd",
      "groupSlug": "flux-cd",
      "matchPackagePrefixes": ["ghcr.io/fluxcd"]
    },
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "excludePackagePrefixes": ["ghcr.io/fluxcd"],
      "matchPackagePatterns": [
        "*"
      ]
    }
  ],
  "separateMajorMinor": false
  
}